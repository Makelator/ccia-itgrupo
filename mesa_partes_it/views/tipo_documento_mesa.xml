<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
        <record model="ir.ui.view" id="tipo_documento_mesa_view">
            <field name="name">tipo.documento.mesa.form</field>
            <field name="model">tipo.documento.mesa</field>
            <field name="arch" type="xml">
                <form string="Mesa de Partes">


                    <sheet>
                       
                                 
                        <group >
                            <group>
                              
                                <field name="name" />
                               
                            </group >



                        </group>

   
                     </sheet>

                </form>
            </field>
        </record>

       
        <record model="ir.ui.view" id="tipo_documento_mesa_tree">
            <field name="name">tipo.documento.mesa.tree</field>
            <field name="model">tipo.documento.mesa</field>
            <field name="arch" type="xml">
                <tree string="Tipo de Documento" editable='bottom'>
                        <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="tipo_documento_mesa_view_search" model="ir.ui.view">
            <field name="name">Tipo Documento - Busqueda</field>
            <field name="model">tipo.documento.mesa</field>
            <field name="arch" type="xml">
                <search string="Tipo de Documento">
                    <field name="name" />

                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="tipo_documento_mesa_action"> 
            <field name="name">Tipo de Documento</field>
            <field name="res_model">tipo.documento.mesa</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="tipo_documento_mesa_view_search"/>
        </record>


        <menuitem   id="configuracion_sub_menu"
                    name="Configuracion" 
                    parent="mesa_partes_it.mesa_partes_menu"   
                    sequence="1"/>

        <menuitem   id="tipo_documento_mesa_sub_menu"
                    name="Tipo de Documento" 
                    parent="mesa_partes_it.configuracion_sub_menu"   
                    action= "tipo_documento_mesa_action"
                    sequence="1"/>

    
               
  </data>
</odoo>